<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.exercise.ExerciseFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Exercise Fragment"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_data_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_picker"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edt_workout_datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="@string/hint_datum"
        android:inputType="date|datetime"
        android:selectAllOnFocus="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_workout_datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Datum:"
        android:textSize="24sp" />

</LinearLayout>