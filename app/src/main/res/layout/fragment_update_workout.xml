<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.workout.UpdateWorkoutFragment">
    <data>
        <variable
            name="viewModel"
            type="info.diwe.training_app.viewmodel.workout.WorkoutEditViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_update_workoutname"
            android:inputType="text"
            android:text="@={viewModel.workout.workoutName}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel_update_workout"
                android:text="Cancel"
                android:layout_marginLeft="8dp"
                android:onClick="@{() -> viewModel.cancelUpdateWorkout()}"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save_update_workout"
                android:text="Save"
                android:layout_marginLeft="8dp"
                android:onClick="@{() -> viewModel.updateWorkout()}"/>
        </LinearLayout>

    </LinearLayout>
</layout>