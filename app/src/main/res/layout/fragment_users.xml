<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.user.UsersFragment">
    <data>
        <variable
            name="viewModel"
            type="info.diwe.training_app.viewmodel.user.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/enter_user_name"
            android:text="@={viewModel.newUserName}" />

        <EditText
            android:id="@+id/edt_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/enter_user_email"
            android:text="@={viewModel.newUserEmail}" />

        <Button
            android:id="@+id/btn_save_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/save_user"
            android:onClick="@{() -> viewModel.addUser()}" />

        <TextView
            android:id="@+id/tv_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.usersAsString}"/>

    </LinearLayout>
</layout>